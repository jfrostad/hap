#load ggplot2
library(ggplot2)
test <- mtcars #mpg=miles per gallon, hp=horsepower
plot(test$hp, test$mpg)
plot(test$hp, test$mpg, main = 'Fuel Efficiency by Power')
#initialize the pretty plot
#plots everything IN ORDER
ggplot() +
# "geometries"
geom_point(data = test, aes(x=hp, y=mpg,
alpha = disp, color = cyl, fill = drat,
group = wt, shape = gear, size = carb,
stroke = qsec)) +
xlab('Horsepower') +                           #x axis
ylab('Miles per Gallon') +                     #y axis
ggtitle('Fuel Efficiency vs. Power') +         #title
theme_bw() +                                   #makes theme of plot B&W
theme(plot.title = element_text(hjust = 0.5))  #centering the title
